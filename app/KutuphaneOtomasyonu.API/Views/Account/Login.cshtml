@model LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Otomasyonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass-bg: rgba(255, 255, 255, 0.95);
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
        }

        .login-card {
            background: var(--glass-bg);
            border-radius: 24px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 48px 40px;
            backdrop-filter: blur(20px);
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            background: var(--primary-gradient);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .login-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 8px;
        }

        .login-header p {
            color: #6b7280;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-floating > .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            height: 56px;
            padding: 16px 16px 0;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
        }

        .form-floating > label {
            padding: 16px;
            color: #6b7280;
        }

        .form-check {
            margin-bottom: 24px;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .btn-login {
            width: 100%;
            height: 52px;
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 14px 18px;
            margin-bottom: 24px;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
        }

        .demo-accounts {
            margin-top: 32px;
            padding-top: 24px;
            border-top: 1px solid #e5e7eb;
        }

        .demo-accounts h6 {
            font-size: 0.85rem;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 12px;
        }

        .demo-account {
            background: #f9fafb;
            border-radius: 10px;
            padding: 12px 16px;
            margin-bottom: 8px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.875rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .demo-account:hover {
            background: #f3f4f6;
        }

        .demo-account .role {
            font-weight: 600;
            color: #1a1a2e;
        }

        .demo-account .credentials {
            color: #6b7280;
        }

        .demo-account .badge {
            font-size: 0.7rem;
            padding: 4px 8px;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .login-card {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="bi bi-book"></i>
                </div>
                <h1>Kütüphane Otomasyonu</h1>
                <p>Hesabınıza giriş yapın</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@error.ErrorMessage</span>
                    }
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="E-posta" autocomplete="email">
                    <label for="email"><i class="bi bi-envelope me-2"></i>E-posta</label>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifre" autocomplete="current-password">
                    <label for="password"><i class="bi bi-lock me-2"></i>Şifre</label>
                </div>

                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
                </div>

                <button type="submit" class="btn btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                </button>
            </form>

            <div class="demo-accounts">
                <h6><i class="bi bi-info-circle me-1"></i>Demo Hesaplar</h6>
                <div class="demo-account" onclick="fillCredentials('admin@kutuphane.com', 'admin123')">
                    <div>
                        <span class="role">Admin</span>
                        <span class="credentials ms-2">admin@kutuphane.com</span>
                    </div>
                    <span class="badge bg-danger">Tam Yetki</span>
                </div>
                <div class="demo-account" onclick="fillCredentials('ayse@kutuphane.com', 'librarian123')">
                    <div>
                        <span class="role">Kütüphaneci</span>
                        <span class="credentials ms-2">ayse@kutuphane.com</span>
                    </div>
                    <span class="badge bg-primary">Yönetim</span>
                </div>
                <div class="demo-account" onclick="fillCredentials('ahmet@email.com', 'member123')">
                    <div>
                        <span class="role">Üye</span>
                        <span class="credentials ms-2">ahmet@email.com</span>
                    </div>
                    <span class="badge bg-secondary">Sınırlı</span>
                </div>
            </div>

            <div style="text-align: center; margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                <div class="mb-2">
                    <a href="@Url.Action("ForgotPassword", "Account")" style="color: #667eea; font-weight: 500; text-decoration: none;">
                        <i class="bi bi-key me-1"></i>Şifremi Unuttum
                    </a>
                </div>
                Hesabınız yok mu? <a href="@Url.Action("Register", "Account")" style="color: #667eea; font-weight: 600; text-decoration: none;">Üye Olun</a>
            </div>
        </div>
    </div>

    <script>
        function fillCredentials(email, password) {
            document.getElementById('email').value = email;
            document.getElementById('password').value = password;
        }
    </script>
</body>
</html>
