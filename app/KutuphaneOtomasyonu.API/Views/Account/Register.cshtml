@model RegisterViewModel
@{
    ViewData["Title"] = "Üye Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Otomasyonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            --glass-bg: rgba(255, 255, 255, 0.95);
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .register-container {
            width: 100%;
            max-width: 480px;
        }

        .register-card {
            background: var(--glass-bg);
            border-radius: 24px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 48px 40px;
            backdrop-filter: blur(20px);
        }

        .register-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .register-icon {
            width: 80px;
            height: 80px;
            background: var(--primary-gradient);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(17, 153, 142, 0.4);
        }

        .register-header h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 8px;
        }

        .register-header p {
            color: #6b7280;
            font-size: 0.95rem;
        }

        .form-floating {
            margin-bottom: 16px;
        }

        .form-floating > .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            height: 56px;
            padding: 16px 16px 0;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus {
            border-color: #11998e;
            box-shadow: 0 0 0 4px rgba(17, 153, 142, 0.15);
        }

        .form-floating > label {
            padding: 16px;
            color: #6b7280;
        }

        .btn-register {
            width: 100%;
            height: 52px;
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
            margin-top: 8px;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(17, 153, 142, 0.4);
            color: white;
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 14px 18px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
        }

        .login-link {
            text-align: center;
            margin-top: 24px;
            padding-top: 24px;
            border-top: 1px solid #e5e7eb;
        }

        .login-link a {
            color: #11998e;
            font-weight: 600;
            text-decoration: none;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        .field-validation-error {
            color: #dc2626;
            font-size: 0.85rem;
            margin-top: 4px;
            display: block;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .register-card {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <div class="register-icon">
                    <i class="bi bi-person-plus"></i>
                </div>
                <h1>Üye Ol</h1>
                <p>Kütüphane sistemine üye olun</p>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@error.ErrorMessage</span><br/>
                    }
                </div>
            }

            <form asp-action="Register" method="post">
                @Html.AntiForgeryToken()

                <div class="form-floating">
                    <input asp-for="FullName" type="text" class="form-control" id="fullName" placeholder="Ad Soyad" autocomplete="name">
                    <label for="fullName"><i class="bi bi-person me-2"></i>Ad Soyad</label>
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="E-posta" autocomplete="email">
                    <label for="email"><i class="bi bi-envelope me-2"></i>E-posta</label>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Phone" type="tel" class="form-control" id="phone" placeholder="Telefon" autocomplete="tel">
                    <label for="phone"><i class="bi bi-phone me-2"></i>Telefon (Opsiyonel)</label>
                    <span asp-validation-for="Phone" class="field-validation-error"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Şifre" autocomplete="new-password">
                    <label for="password"><i class="bi bi-lock me-2"></i>Şifre</label>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Şifre Tekrar" autocomplete="new-password">
                    <label for="confirmPassword"><i class="bi bi-lock-fill me-2"></i>Şifre Tekrar</label>
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn btn-register">
                    <i class="bi bi-person-plus me-2"></i>Üye Ol
                </button>
            </form>

            <div class="login-link">
                Zaten hesabınız var mı? <a href="@Url.Action("Login", "Account")">Giriş Yapın</a>
            </div>
        </div>
    </div>
</body>
</html>
