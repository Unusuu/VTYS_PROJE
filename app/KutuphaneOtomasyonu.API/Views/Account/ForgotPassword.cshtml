@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kütüphane Otomasyonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --glass-bg: rgba(255, 255, 255, 0.95);
        }

        * {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        body {
            min-height: 100vh;
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
        }

        .login-card {
            background: var(--glass-bg);
            border-radius: 24px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            padding: 48px 40px;
            backdrop-filter: blur(20px);
        }

        .login-header {
            text-align: center;
            margin-bottom: 32px;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            background: var(--primary-gradient);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 2.5rem;
            color: white;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .login-header h1 {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a2e;
            margin-bottom: 8px;
        }

        .login-header p {
            color: #6b7280;
            font-size: 0.9rem;
        }

        .form-floating {
            margin-bottom: 16px;
        }

        .form-floating > .form-control {
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            height: 56px;
            padding: 16px 16px 0;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-floating > .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.15);
        }

        .form-floating > label {
            padding: 16px;
            color: #6b7280;
        }

        .btn-login {
            width: 100%;
            height: 52px;
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 14px 18px;
            margin-bottom: 20px;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
        }

        .alert-success {
            background: #dcfce7;
            color: #16a34a;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .login-card {
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="bi bi-key"></i>
                </div>
                <h1>Şifremi Unuttum</h1>
                <p>E-posta adresinizi girerek yeni şifre belirleyebilirsiniz</p>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@error.ErrorMessage</span>
                    }
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" placeholder="E-posta" autocomplete="email">
                    <label asp-for="Email"><i class="bi bi-envelope me-2"></i>E-posta</label>
                </div>

                <div class="form-floating">
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Yeni Şifre" autocomplete="new-password">
                    <label asp-for="NewPassword"><i class="bi bi-lock me-2"></i>Yeni Şifre (en az 6 karakter)</label>
                </div>

                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Yeni Şifre (Tekrar)" autocomplete="new-password">
                    <label asp-for="ConfirmPassword"><i class="bi bi-lock-fill me-2"></i>Yeni Şifre (Tekrar)</label>
                </div>

                <button type="submit" class="btn btn-login mt-3">
                    <i class="bi bi-check-lg me-2"></i>Şifreyi Sıfırla
                </button>
            </form>

            <div style="text-align: center; margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                <a href="@Url.Action("Login", "Account")" style="color: #667eea; font-weight: 500; text-decoration: none;">
                    <i class="bi bi-arrow-left me-1"></i>Giriş sayfasına dön
                </a>
            </div>
        </div>
    </div>
</body>
</html>
