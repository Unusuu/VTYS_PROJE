@model MemberDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hoşgeldin Mesajı -->
<div class="alert alert-success alert-dismissible fade show d-flex align-items-center mb-4" role="alert">
    <i class="bi bi-check-circle-fill me-2"></i>
    <span>Hoş geldiniz, <strong>@Model.MemberName</strong>!</span>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>

<!-- İstatistik Kartları -->
<div class="row g-4 mb-4">
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card">
            <div class="icon blue">
                <i class="bi bi-book"></i>
            </div>
            <div class="stat-value">@Model.MyActiveLoans</div>
            <div class="stat-label">Aktif Ödünç</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card">
            <div class="icon green">
                <i class="bi bi-collection"></i>
            </div>
            <div class="stat-value">@Model.MyTotalLoans</div>
            <div class="stat-label">Toplam Ödünç</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card">
            <div class="icon orange">
                <i class="bi bi-person-badge"></i>
            </div>
            <div class="stat-value">@Model.MaxLoanLimit</div>
            <div class="stat-label">Ödünç Limitim</div>
        </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stat-card">
            <div class="icon @(Model.MyOverdueLoans > 0 ? "red" : "green")">
                <i class="bi bi-exclamation-triangle"></i>
            </div>
            <div class="stat-value">@Model.MyOverdueLoans</div>
            <div class="stat-label">Geciken Kitap</div>
        </div>
    </div>
</div>

@if (Model.MyOverdueLoans > 0)
{
    <div class="alert alert-danger d-flex align-items-center mb-4">
        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
        <div>
            <strong>Dikkat!</strong> @Model.MyOverdueLoans adet gecikmiş kitabınız var. Lütfen en kısa sürede iade ediniz.
        </div>
    </div>
}

<div class="row g-4">
    <!-- Son Ödünçlerim -->
    <div class="col-12 col-lg-7">
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-clock-history me-2"></i>Son Ödünçlerim
                </h5>
                <a href="@Url.Action("MyLoans", "Loans")" class="btn btn-sm btn-outline-primary">
                    Tümünü Gör <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>

            @if (Model.MyRecentLoans.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Kitap</th>
                                <th>Ödünç Tarihi</th>
                                <th>Teslim Tarihi</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in Model.MyRecentLoans)
                            {
                                <tr class="@(loan.IsOverdue && loan.ReturnedAt == null ? "table-danger" : "")">
                                    <td>
                                        <div class="fw-medium">@loan.BookTitle</div>
                                        <small class="text-muted">@loan.BookAuthor</small>
                                    </td>
                                    <td>@loan.LoanedAt.ToString("dd.MM.yyyy")</td>
                                    <td>@loan.DueAt.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if (loan.ReturnedAt != null)
                                        {
                                            <span class="badge badge-active">
                                                <i class="bi bi-check-circle me-1"></i>İade Edildi
                                            </span>
                                        }
                                        else if (loan.IsOverdue)
                                        {
                                            <span class="badge badge-overdue">
                                                <i class="bi bi-exclamation-triangle me-1"></i>Gecikmiş
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-loaned">
                                                <i class="bi bi-clock me-1"></i>Aktif
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                    Henüz ödünç almadınız
                    <div class="mt-3">
                        <a href="@Url.Action("Search", "Books")" class="btn btn-primary btn-sm">
                            <i class="bi bi-search me-1"></i>Kitap Ara
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Popüler Kitaplar -->
    <div class="col-12 col-lg-5">
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0 fw-semibold">
                    <i class="bi bi-star text-warning me-2"></i>Popüler Kitaplar
                </h5>
                <span class="badge bg-light text-dark">Son 30 Gün</span>
            </div>

            @if (Model.PopularBooks.Any())
            {
                <div class="list-group list-group-flush">
                    @{int rank = 1;}
                    @foreach (var book in Model.PopularBooks)
                    {
                        <div class="list-group-item d-flex align-items-center px-0">
                            <div class="me-3">
                                <span class="badge rounded-pill bg-primary" style="width: 28px; height: 28px; line-height: 18px;">
                                    @rank
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="fw-medium">@book.Title</div>
                                <small class="text-muted">@book.Author</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-light text-dark">
                                    @book.LoanCount ödünç
                                </span>
                            </div>
                        </div>
                        rank++;
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-bar-chart fs-1 d-block mb-2"></i>
                    Henüz yeterli veri yok
                </div>
            }
        </div>
    </div>
</div>
