@model List<MyLoanViewModel>
@{
    ViewData["Title"] = "Ödünç Geçmişim";
}

<div class="mb-4">
    <p class="text-muted mb-0">Tüm ödünç aldığınız kitapları görüntüleyin</p>
</div>

<div class="table-container">
    @if (Model.Any())
    {
        <table class="table table-hover datatable">
            <thead>
                <tr>
                    <th>Kitap</th>
                    <th>Yazar</th>
                    <th>Ödünç Tarihi</th>
                    <th>Teslim Tarihi</th>
                    <th>İade Tarihi</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    var rowClass = loan.IsOverdue && loan.ReturnedAt == null ? "table-danger" : "";
                    <tr class="@rowClass">
                        <td class="fw-medium">@loan.BookTitle</td>
                        <td>@loan.BookAuthor</td>
                        <td>@loan.LoanedAt.ToString("dd.MM.yyyy")</td>
                        <td>@loan.DueAt.ToString("dd.MM.yyyy")</td>
                        <td>@(loan.ReturnedAt?.ToString("dd.MM.yyyy") ?? "-")</td>
                        <td>
                            @if (loan.ReturnedAt != null)
                            {
                                <span class="badge badge-active">
                                    <i class="bi bi-check-circle me-1"></i>İade Edildi
                                </span>
                            }
                            else if (loan.IsOverdue)
                            {
                                <span class="badge badge-overdue">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Gecikmiş
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-loaned">
                                    <i class="bi bi-clock me-1"></i>Aktif
                                </span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-book fs-1 d-block mb-2"></i>
            Henüz ödünç almadınız
        </div>
    }
</div>
