@model LoanViewModel
@{
    ViewData["Title"] = "Ödünç Ver";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="table-container">
            <div class="text-center mb-4">
                <div class="icon blue mx-auto mb-3" style="width: 64px; height: 64px; border-radius: 1rem;">
                    <i class="bi bi-box-arrow-right"></i>
                </div>
                <h4 class="fw-bold">Ödünç Ver</h4>
                <p class="text-muted">Bir üyeye kitap ödünç verin</p>
            </div>

            <form asp-action="Lend" asp-controller="Loans" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <i class="bi bi-person me-1"></i>Üye Seçin *
                    </label>
                    <select asp-for="MemberId" asp-items="Model.ActiveMembers" class="form-select form-select-lg">
                        <option value="">-- Üye Seçin --</option>
                    </select>
                    <span asp-validation-for="MemberId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <i class="bi bi-book me-1"></i>Kitap (Kopya) Seçin *
                    </label>
                    <select asp-for="CopyId" asp-items="Model.AvailableCopies" class="form-select form-select-lg">
                        <option value="">-- Kitap Seçin --</option>
                    </select>
                    <span asp-validation-for="CopyId" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <i class="bi bi-calendar me-1"></i>Ödünç Süresi
                    </label>
                    <div class="input-group">
                        <input type="number" asp-for="LoanDays" class="form-control form-control-lg" min="1" max="90">
                        <span class="input-group-text">gün</span>
                    </div>
                    <small class="text-muted">Varsayılan: 14 gün</small>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-lg me-2"></i>Ödünç Ver
                    </button>
                    <a href="@Url.Action("Active", "Loans")" class="btn btn-outline-secondary">
                        Aktif Ödünçleri Görüntüle
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
