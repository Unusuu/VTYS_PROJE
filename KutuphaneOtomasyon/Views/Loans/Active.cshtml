@model List<ActiveLoanViewModel>
@{
    ViewData["Title"] = "Aktif Ödünçler";
}

<div class="mb-4">
    <p class="text-muted mb-0">Şu anda ödünçte olan tüm kitaplar</p>
</div>

<div class="table-container">
    @if (Model.Any())
    {
        <table class="table table-hover datatable">
            <thead>
                <tr>
                    <th>Kitap</th>
                    <th>ISBN</th>
                    <th>Raf</th>
                    <th>Üye</th>
                    <th>Ödünç Tarihi</th>
                    <th>Teslim Tarihi</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr class="@(loan.IsOverdue ? "table-danger" : "")">
                        <td>
                            <div class="fw-medium">@loan.BookTitle</div>
                            <small class="text-muted">@loan.BookAuthor</small>
                        </td>
                        <td><code>@loan.Isbn</code></td>
                        <td>@loan.ShelfLocation</td>
                        <td>
                            <div>@loan.MemberName</div>
                            <small class="text-muted">@loan.MemberEmail</small>
                        </td>
                        <td>@loan.LoanedAt.ToString("dd.MM.yyyy")</td>
                        <td>@loan.DueAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (loan.IsOverdue)
                            {
                                <span class="badge badge-overdue">@loan.DaysOverdue gün gecikmiş</span>
                            }
                            else
                            {
                                <span class="badge badge-active">Aktif</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
            Aktif ödünç bulunmuyor
        </div>
    }
</div>
