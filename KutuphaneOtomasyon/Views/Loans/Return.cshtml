@model List<ActiveLoanViewModel>
@{
    ViewData["Title"] = "İade Al";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Aktif ödünçleri görüntüleyin ve iade alın</p>
    </div>
    <a href="@Url.Action("Lend", "Loans")" class="btn btn-primary">
        <i class="bi bi-plus-lg me-2"></i>Yeni Ödünç
    </a>
</div>

<div class="table-container">
    @if (Model.Any())
    {
        <table class="table table-hover datatable" id="loansTable">
            <thead>
                <tr>
                    <th>Kitap</th>
                    <th>Üye</th>
                    <th>Ödünç Tarihi</th>
                    <th>Teslim Tarihi</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr class="@(loan.IsOverdue ? "table-danger" : "")">
                        <td>
                            <div class="fw-medium">@loan.BookTitle</div>
                            <small class="text-muted">@loan.BookAuthor</small>
                        </td>
                        <td>
                            <div>@loan.MemberName</div>
                            <small class="text-muted">@loan.MemberEmail</small>
                        </td>
                        <td>@loan.LoanedAt.ToString("dd.MM.yyyy")</td>
                        <td>@loan.DueAt.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (loan.IsOverdue)
                            {
                                <span class="badge badge-overdue">
                                    <i class="bi bi-exclamation-triangle me-1"></i>@loan.DaysOverdue gün gecikmiş
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-active">Aktif</span>
                            }
                        </td>
                        <td>
                            <form asp-action="ReturnBook" asp-controller="Loans" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="loanId" value="@loan.LoanId" />
                                <input type="hidden" name="fineAmount" value="0" />
                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bu kitabı iade almak istediğinize emin misiniz?')">
                                    <i class="bi bi-check-lg me-1"></i>İade Al
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">Aktif ödünç bulunmuyor</h5>
            <a href="@Url.Action("Lend", "Loans")" class="btn btn-primary mt-3">
                <i class="bi bi-plus-lg me-2"></i>İlk Ödüncü Ver
            </a>
        </div>
    }
</div>
