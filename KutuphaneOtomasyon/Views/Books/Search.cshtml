@model List<BookSearchViewModel>
@{
    ViewData["Title"] = "Kitap Ara";
    var query = ViewBag.SearchQuery as string;
}

<div class="mb-4">
    <div class="table-container">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-9">
                <label class="form-label fw-medium">
                    <i class="bi bi-search me-1"></i>Kitap Ara
                </label>
                <input type="text" name="query" class="form-control form-control-lg" 
                       placeholder="Kitap adı, yazar, kategori veya ISBN..." 
                       value="@query" autocomplete="off">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    <i class="bi bi-search me-2"></i>Ara
                </button>
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(query))
{
    <div class="mb-3">
        <span class="text-muted">"<strong>@query</strong>" için <strong>@Model.Count</strong> sonuç bulundu</span>
    </div>
}

<div class="row g-4">
    @if (Model.Any())
    {
        @foreach (var book in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="table-container h-100">
                    <div class="d-flex mb-3">
                        <div class="bg-primary text-white rounded-3 d-flex align-items-center justify-content-center me-3" 
                             style="width: 60px; height: 80px; min-width: 60px;">
                            <i class="bi bi-book fs-3"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="fw-bold mb-1 text-truncate" title="@book.Title">@book.Title</h6>
                            <p class="text-muted mb-1 small">@book.Author</p>
                            @if (!string.IsNullOrEmpty(book.Category))
                            {
                                <span class="badge bg-light text-dark">@book.Category</span>
                            }
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            @if (book.IsAvailable)
                            {
                                <span class="badge badge-available fs-6">
                                    <i class="bi bi-check-circle me-1"></i>@book.AvailableCopies Müsait
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-overdue">
                                    <i class="bi bi-x-circle me-1"></i>Tükendi
                                </span>
                            }
                        </div>
                        <small class="text-muted">@book.TotalCopies kopya</small>
                    </div>

                    @if (!string.IsNullOrEmpty(book.Publisher) || book.PublishYear != null)
                    {
                        <hr class="my-2">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>@(book.Publisher ?? "-")</span>
                            <span>@(book.PublishYear?.ToString() ?? "-")</span>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else if (!string.IsNullOrEmpty(query))
    {
        <div class="col-12">
            <div class="table-container text-center py-5">
                <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">Sonuç bulunamadı</h5>
                <p class="text-muted">Farklı bir arama terimi deneyin</p>
            </div>
        </div>
    }
    else
    {
        <div class="col-12">
            <div class="table-container text-center py-5">
                <i class="bi bi-book text-primary" style="font-size: 4rem;"></i>
                <h5 class="mt-3">Kitap Arayın</h5>
                <p class="text-muted">Yukarıdaki arama kutusunu kullanarak kitap arayabilirsiniz</p>
            </div>
        </div>
    }
</div>
