@model RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Üye Ol";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Üye Ol - Kütüphane Otomasyonu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * { font-family: 'Inter', sans-serif; }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 0;
        }
        
        .register-container {
            max-width: 480px;
            width: 100%;
            padding: 1rem;
        }
        
        .register-card {
            background: #fff;
            border-radius: 1.5rem;
            padding: 2.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }
        
        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .register-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border-radius: 1.25rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.25rem;
        }
        
        .register-icon i {
            font-size: 2rem;
            color: #fff;
        }
        
        .register-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }
        
        .register-subtitle {
            color: #64748b;
            font-size: 0.9rem;
        }
        
        .form-floating label {
            color: #64748b;
        }
        
        .form-control {
            border-radius: 0.75rem;
            padding: 1rem;
            border: 2px solid #e2e8f0;
            transition: all 0.2s;
        }
        
        .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
        }
        
        .btn-register {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            border: none;
            border-radius: 0.75rem;
            padding: 1rem;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            color: #fff;
            transition: all 0.2s;
        }
        
        .btn-register:hover {
            opacity: 0.9;
            transform: translateY(-1px);
            color: #fff;
        }
        
        .btn-back {
            color: #64748b;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }
        
        .btn-back:hover {
            color: #667eea;
        }
        
        .alert {
            border-radius: 0.75rem;
            border: none;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="register-header">
                <div class="register-icon">
                    <i class="bi bi-person-plus"></i>
                </div>
                <h1 class="register-title">Üye Ol</h1>
                <p class="register-subtitle">Kütüphaneye üye olun ve kitap ödünç alın</p>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mb-4">
                    <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="Register" asp-controller="Auth" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                <div class="form-floating mb-3">
                    <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                    <label asp-for="FullName"><i class="bi bi-person me-2"></i>Ad Soyad</label>
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="E-posta" autocomplete="email" />
                    <label asp-for="Email"><i class="bi bi-envelope me-2"></i>E-posta</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Phone" class="form-control" placeholder="Telefon" />
                    <label asp-for="Phone"><i class="bi bi-telephone me-2"></i>Telefon (Opsiyonel)</label>
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Şifre" />
                    <label asp-for="Password"><i class="bi bi-lock me-2"></i>Şifre</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                    <label asp-for="ConfirmPassword"><i class="bi bi-lock-fill me-2"></i>Şifre Tekrar</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-register mb-3">
                    <i class="bi bi-check-lg me-2"></i>Üye Ol
                </button>

                <div class="text-center">
                    <a href="@Url.Action("Login", "Auth")" class="btn-back">
                        <i class="bi bi-arrow-left me-1"></i>Giriş sayfasına dön
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
